<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sponia.opyfunctioindemo.activity.SurfaceActivity">
    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空"/>

    <com.sponia.opyfunctioindemo.customedview.FaceCuteView
        android:id="@+id/surface_view"
        android:layout_width="87dp"
        android:layout_height="92dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/lly_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/surface_view"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_face1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/face"
            />
        <ImageView
            android:id="@+id/iv_hair1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hair1"
            />
        <ImageView
            android:id="@+id/iv_hair2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hair2"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择脸型和发型"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lly_linearlayout"/>
</RelativeLayout>
